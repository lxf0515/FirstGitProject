<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    >

    <LinearLayout
        android:id="@+id/bottom_tab_custom_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >

            <Button
                android:id="@+id/bottom_tab_custom_friend_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tag_contacts_selector" />

            <TextView
                android:id="@+id/bottom_tab_custom_friend_tv"
                android:text="好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bottom_tab_custom_friend_img"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:textColor="@color/colorGreyText"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:background="@mipmap/fabu_yinying"
            >

            <Button
                android:id="@+id/bottom_tab_custom_found_img"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tag_found_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <Button
                android:id="@+id/bottom_tab_custom_me_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tag_me_selector" />
            <TextView
                android:id="@+id/bottom_tab_custom_me_tv"
                android:text="我的"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bottom_tab_custom_me_img"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:textColor="@color/colorGreyText"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>